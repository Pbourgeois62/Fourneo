<div {{ attributes }}>
    {{ form_start(form) }}
    <div class="overflow-x-auto shadow-md rounded-md">
    <div>
        {{ form_widget(form.weather, {
            'attr': {
                'class': 'text-sm md:text-base md:w-1/2 rounded-md border-gray-300 mx-4 mb-4'
            }
    })}}
        <table class="w-full text-xs md:text-sm text-left text-coffee">
            <thead class="text-xs uppercase bg-coffee text-flour">
                <tr>
                    <th class="py-2 px-3 md:py-3 md:px-6">Nom du produit</th>
                    <th class="py-2 px-3 md:py-3 md:px-6 text-center">Invendus</th>
                </tr>
            </thead>
            <tbody>
                {% for productEventForm in form.productEvents %}
                    {% set productEvent = productEventForm.vars.data %}
                    <tr class="bg-white border-b hover:bg-gray-50">
                        <td class="py-3 px-3 md:py-4 md:px-6 font-medium text-coffee whitespace-nowrap">
                            <div class="flex flex-col">
                                <span class="text-sm md:text-base">{{ productEvent.product.name }}</span>
                                <span class="text-xs text-gray-500 md:hidden">Quantité mise en vente : {{ productEvent.quantity }}</span>
                                <span class="hidden md:inline">Quantité mise en vente : {{ productEvent.quantity }}</span>
                            </div>
                        </td>
                        <td class="py-3 px-3 md:py-4 md:px-6 text-center">
                            {{ form_widget(productEventForm.unsoldQuantity, {
                                'attr': {
                                    'class': 'w-20 text-center text-sm md:text-base rounded-md'
                                }
                            }) }}
                            {{ form_errors(productEventForm.unsoldQuantity) }}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    {{ form_end(form) }}
</div>
