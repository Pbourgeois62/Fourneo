<div {{ attributes }} class="max-w-2xl mx-auto mt-10">
    {{ form_start(form, {
        attr: {
            class: 'space-y-6 bg-white p-8 rounded-xl shadow-lg'
        }
    }) }}

    <div>
        {{ form_label(form.name, null, {'label_attr': {'class': 'block font-medium text-gray-700'}}) }}
        {{ form_widget(form.name, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500'}}) }}
        {{ form_errors(form.name) }}
    </div>

    <div>
        {{ form_label(form.size, null, {'label_attr': {'class': 'block font-medium text-gray-700'}}) }}
        {{ form_widget(form.size, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500'}}) }}
        {{ form_errors(form.size) }}
    </div>

    <div>
        {{ form_label(form.price, null, {'label_attr': {'class': 'block font-medium text-gray-700'}}) }}
        {{ form_widget(form.price, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500'}}) }}
        {{ form_errors(form.price) }}
    </div>

    <div>
        {{ form_label(form.category, null, {'label_attr': {'class': 'block font-medium text-gray-700 mb-2'}}) }}
        {{ form_widget(form.category, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500'}}) }}
        {{ form_errors(form.category) }}
    </div>

    <div class="space-y-2">
        <div class="flex items-center space-x-3">
            {{ form_widget(form.isNewCategory, {'attr': {'class': 'h-5 w-5 text-blue-600'}}) }}
            {{ form_label(form.isNewCategory, null, {'label_attr': {'class': 'font-medium text-gray-700 cursor-pointer'}}) }}
        </div>
        {% if form.isNewCategory.vars.checked %}
            <div>
                {{ form_widget(form.newCategory, {
                    'attr': {
                        'class': 'mt-1 block w-full rounded-md border border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500',
                        'placeholder': 'Entrez le nom de la nouvelle catégorie'
                    }
                }) }}
                {{ form_errors(form.newCategory) }}
            </div>
        {% endif %}
    </div>

    <div class="flex items-center justify-between">
        <button type="button"
                data-action="live#action:prevent"
                data-live-action-param="save"
                class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-5 rounded-lg transition-colors duration-200">
            {{ product is defined and product ? 'Modifier' : 'Créer' }}
        </button>
        <a href="{{ path('product_index') }}" class="text-gray-600 hover:text-gray-900 underline">
            Retour à la liste
        </a>
    </div>

    {{ form_end(form) }}
</div>
