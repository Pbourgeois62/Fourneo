<div {{ attributes }}>
	{{ form_start(form, {
        attr: {
            class: 'item-card space-y-4'
        }
    }) }}

	<div>
		{{ form_label(form.name, null, {'label_attr': {'class': 'block font-medium '}}) }}
		{{ form_widget(form.name, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500'}}) }}
		{{ form_errors(form.name) }}
	</div>

	<div>
		{{ form_label(form.price, null, {'label_attr': {'class': 'font-medium '}}) }}
		{{ form_widget(form.price, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500'}}) }}
		{{ form_errors(form.price) }}
	</div>

	<div>
		{{ form_label(form.priceUnit, null, {'label_attr': {'class': 'block font-medium '}}) }}
		{{ form_widget(form.priceUnit, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500'}}) }}
		{{ form_errors(form.priceUnit) }}
	</div>

	<div>
		{{ form_label(form.allergens, null, {'label_attr': {'class': 'block font-medium  mb-2'}}) }}
		{{ form_widget(form.allergens, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500'}}) }}
		{{ form_errors(form.allergens) }}
	</div>

	<div class="flex justify-end space-x-4">
		<a href="{{ path('product_index') }}" class="btn-return">
			<i class="bi bi-arrow-left mr-2"></i>Retour
		</a>
		<button type="button" data-action="live#action:prevent" data-live-action-param="save" class="btn-validation">
			Enregistrer
		</button>
	</div>

	{{ form_end(form) }}
</div>
