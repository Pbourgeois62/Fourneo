{% extends 'base.html.twig' %}

{% block title %}Nouvelle catégorie - Fourneo{% endblock %}

{% block body %}
    <h1 class="text-2xl font-bold mb-6 text-gray-800">
        {{ category is defined and category ? 'Modifier la catégorie' : 'Créer une nouvelle catégorie' }}
    </h1>

    {{ form_start(form, {
        attr: {
            class: 'space-y-6 bg-white p-6 rounded-xl shadow-md'
        }
    }) }}
        {{ form_row(form.name) }}        

        <div>
            <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg">
                {{ category is defined and category ? 'Modifier' : 'Créer' }}
            </button>
            <a href="{{ path('category_index') }}" class="ml-4 text-gray-600 hover:text-gray-900">
                Retour à la liste
            </a>
        </div>
    {{ form_end(form) }}
{% endblock %}
