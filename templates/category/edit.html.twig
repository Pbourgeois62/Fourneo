{% extends 'base.html.twig' %}

{% block title %}Nouvelle catégorie - Fourneo
{% endblock %}

{% block body %}

	<h1 class="text-title">
		{{ category is defined and category ? 'Modifier la catégorie' : 'Créer une nouvelle catégorie' }}
	</h1>
	<div class="main-container">

		{{ form_start(form, {
        attr: {
            class: 'space-y-6 bg-white p-8 rounded-xl shadow-lg'
        }
    }) }}


		<div>
			{{ form_label(form.name, null, {'label_attr': {'class': 'block font-medium text-coffee'}}) }}
			{{ form_widget(form.name, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500'}}) }}
			{{ form_errors(form.name) }}
		</div>

		<div class="flex items-center justify-between">
			<button type="submit" class="bg-blue-600 hover:bg-blue-700 text-cream font-semibold py-2 px-5 rounded-lg transition-colors duration-200">
				{{ category is defined and category ? 'Modifier' : 'Créer' }}
			</button>
			<a href="{{ path('category_index') }}" class="text-gray-600 hover:text-coffee underline">
				Retour à la liste
			</a>
		</div>

		{{ form_end(form) }}
	</div>
{% endblock %}
