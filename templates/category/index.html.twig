{% extends 'base.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block body %}
    <h1 class="title">Liste des catégories</h1>
    <div class="main-container">
        <div class="mt-8 text-right">
            <a href="{{ path('category_new') }}" class="btn-action mb-4 md:mb-8">
                <i class="bi bi-plus-circle mr-2"></i>Créer une catégorie
            </a>
        </div>

        {% if categories is not empty %}
            {% set protectedCategories = ['ingrédient', 'sous-recette', 'a-vendre'] %}

            <div class="overflow-x-auto rounded-lg shadow-md">
                <table class="min-w-full">
                    <thead class="bg-cream text-coffee rounded-lg dark:bg-coffee dark:text-flour">
                        <tr class="hidden md:table-row">
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-coffee uppercase tracking-wider dark:text-flour">
                                Nom
                            </th>
                            <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-coffee uppercase tracking-wider dark:text-flour">
                                Actions
                            </th>
                        </tr>
                        <tr class="md:hidden">
                            {# Visible on mobile, hidden on medium and larger screens #}
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-coffee uppercase tracking-wider dark:text-flour">
                                Nom
                            </th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200 dark:divide-gray-700">
                        {% for category in categories %}
                            {% set isProtected = category.name in protectedCategories %}
                            
                            {# Desktop row #}
                            <tr class="hidden md:table-row text-coffee">
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-sm text-coffee">
                                    {{ category.name }}
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium flex justify-end items-center space-x-2">
                                    <a href="{{ path('category_edit', {id: category.id}) }}" 
                                       class="btn-edit {% if isProtected %}opacity-50 cursor-not-allowed pointer-events-none{% endif %}" 
                                       aria-label="Modifier la catégorie {{ category.name }}"
                                       {% if isProtected %}tabindex="-1"{% endif %}> {# Prevent tabbing to disabled link #}
                                        <i class="bi bi-pencil-square text-lg"></i>
                                    </a>
                                    <form method="post" action="{{ path('category_delete', {id: category.id}) }}" 
                                          onsubmit="return confirm('Confirmer la suppression de la catégorie {{ category.name }} ?');" 
                                          class="inline">
                                        <input type="hidden" name="_method" value="DELETE"/>
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete_category_' ~ category.id) }}"/>
                                        <button type="submit" 
                                                class="btn-delete {% if isProtected %}opacity-50 cursor-not-allowed pointer-events-none{% endif %}" 
                                                aria-label="Supprimer la catégorie {{ category.name }}"
                                                {% if isProtected %}disabled{% endif %}> {# Disable button element directly #}
                                            <i class="bi bi-trash text-lg"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                            
                            {# Mobile row #}
                            <tr class="md:hidden">
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium bg-cream dark:bg-coffee">
                                    <div class="flex justify-between items-center">
                                        <span class="text-coffee dark:text-flour">{{ category.name }}</span>
                                        <div class="flex space-x-2">
                                            <a href="{{ path('category_edit', {id: category.id}) }}" 
                                               class="btn-edit {% if isProtected %}opacity-50 cursor-not-allowed pointer-events-none{% endif %}" 
                                               aria-label="Modifier la catégorie {{ category.name }}"
                                               {% if isProtected %}tabindex="-1"{% endif %}>
                                                <i class="bi bi-pencil-square text-lg"></i>
                                            </a>
                                            <form method="post" action="{{ path('category_delete', {id: category.id}) }}" 
                                                  onsubmit="return confirm('Confirmer la suppression de la catégorie {{ category.name }} ?');" 
                                                  class="inline">
                                                <input type="hidden" name="_method" value="DELETE"/>
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete_category_' ~ category.id) }}"/>
                                                <button type="submit" 
                                                        class="btn-delete {% if isProtected %}opacity-50 cursor-not-allowed pointer-events-none{% endif %}" 
                                                        aria-label="Supprimer la catégorie {{ category.name }}"
                                                        {% if isProtected %}disabled{% endif %}>
                                                    <i class="bi bi-trash text-lg"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <p class="text-salmon dark:text-flour text-center py-8">Aucune catégorie disponible.</p>
        {% endif %}    
    </div>
{% endblock %}