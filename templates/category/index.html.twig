{% extends 'base.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block body %}
<div class="container mx-auto bg-white py-8 px-6 rounded-lg shadow-md">
    <h1 class="text-3xl font-bold mb-8 text-gray-800">Liste des catégories</h1>

    {% if categories is not empty %}
        <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
            {% for category in categories %}
                <div class="relative border border-gray-200 rounded-lg p-4 shadow-sm bg-gray-50 hover:shadow-md transition-shadow">
                    <!-- Nom catégorie -->
                    <h2 class="text-xl font-semibold text-gray-900 mb-2">{{ category.name }}</h2>

                    <!-- Description si tu en as -->
                    {% if category.description is defined and category.description %}
                        <p class="text-sm text-gray-700 mb-4">{{ category.description }}</p>
                    {% endif %}

                    <!-- Actions -->
                    <div class="absolute top-2 right-2 flex gap-2">
                        <a href="{{ path('category_edit', {id: category.id}) }}" class="text-blue-600 hover:text-blue-800" title="Modifier">
                            <i class="bi bi-pencil-square text-lg"></i>
                        </a>
                        <form method="post" action="{{ path('category_delete', {id: category.id}) }}" onsubmit="return confirm('Confirmer la suppression ?');">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete_category_' ~ category.id) }}">
                            <button type="submit" class="text-red-600 hover:text-red-800" title="Supprimer">
                                <i class="bi bi-trash text-lg"></i>
                            </button>
                        </form>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <p class="text-gray-600">Aucune catégorie disponible.</p>
    {% endif %}

    <div class="mt-8 text-right">
        <a href="{{ path('category_new') }}" class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg">
            <i class="bi bi-plus-circle mr-2"></i>Créer une catégorie
        </a>
    </div>
</div>
{% endblock %}
