{% extends 'base.html.twig' %}

{% block title %}{{ deliveryNote is defined and deliveryNote ? 'Modifier le bon de livraison' : 'Nouveau bon de livraison' }} - Fourneo{% endblock %}

{% block body %}
    <h1 class="text-title">
        {{ deliveryNote is defined and deliveryNote ? 'Modifier le bon de livraison' : 'Cr√©er un bon de livraison' }}
    </h1>

    <div class="main-container">
        {{ form_start(form, {
            attr: {
                enctype: 'multipart/form-data',
                class: 'space-y-6 bg-white p-8 rounded-xl shadow-lg'
            }
        }) }}

            <div>
                {{ form_label(form.number, null, {'label_attr': {'class': 'block font-medium '}}) }}
                {{ form_widget(form.number, {'attr': {'class': 'mt-1 block w-full text-sm text-coffee rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500'}}) }}
                {{ form_errors(form.number) }}
            </div>

            <div>
                {{ form_label(form.imageFile, 'Photo du bon de livraison', {'label_attr': {'class': 'block font-medium '}}) }}
                {{ form_widget(form.imageFile, {'attr': {'class': 'mt-1 block w-full text-sm text-coffee file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100'}}) }}
                {{ form_errors(form.imageFile) }}
            </div>

            <div>
                {{ form_label(form.registeredAt, 'Date d\'enregistrement', {'label_attr': {'class': 'block font-medium '}}) }}
                {{ form_widget(form.registeredAt, {'attr': {'class': 'mt-1 block w-full text-sm text-coffee rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500'}}) }}
                {{ form_errors(form.registeredAt) }}
            </div>

            <div class="flex justify-end space-x-4">
                <a href="{{ path('delivery_note_index') }}" class="btn-return">
                    <i class="bi bi-arrow-left mr-2"></i>Retour
                </a>
                <button type="submit" class="btn-validation">
                    Enregistrer
                </button>
            </div>

        {{ form_end(form) }}
    </div>
{% endblock %}
