{# templates/recipe/show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Recette : {{ recipe.name }}{% endblock %}

{% block body %}
    <div class="main-container">

        {# Header Section: Title and Actions #}
        <div class="flex flex-col md:flex-row md:justify-between md:items-center mb-8">
            <h1 class="title">{{ recipe.name }}</h1>
            <div class="flex space-x-3">
                <a href="{{ path('recipe_edit', {'id': recipe.id}) }}" class="btn-action">
                    <i class="bi bi-pencil-square mr-2"></i> Modifier
                </a>
                <form method="post" action="{{ path('recipe_delete', {id: recipe.id}) }}" onsubmit="return confirm('Confirmer la suppression de la recette {{ recipe.name }} ?');" class="inline">
                    <input type="hidden" name="_method" value="DELETE"/>
                    <input type="hidden" name="_token" value="{{ csrf_token('delete_recipe_' ~ recipe.id) }}"/>
                    <button type="submit" class="btn-delete">
                        <i class="bi bi-trash mr-2"></i> Supprimer
                    </button>
                </form>
            </div>
        </div>

        {# Main Content Card #}
        
            {# Description #}
            <p class="text-coffee text-lg leading-relaxed mb-8 italic dark:text-flour">
                {{ recipe.description|default('Aucune description détaillée disponible pour cette recette.') }}
            </p>

            {# Recipe Details Grid #}
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8 border-t border-b border-cream dark:border-coffee py-6">
                {% if recipe.totalDuration is defined and recipe.totalDuration is not null %}
                    <div class="flex items-center space-x-3">
                        <i class="bi bi-hourglass-split text-2xl text-golden"></i>
                        <div>
                            <p class="text-sm text-gray-600 dark:text-flour">Durée totale</p>
                            <p class="text-xl font-bold text-coffee dark:text-flour">{{ recipe.totalDuration }} min</p>
                        </div>
                    </div>
                {% endif %}
                <div class="flex items-center space-x-3">
                    <i class="bi bi-person-fill text-2xl text-golden"></i>
                    <div>
                        <p class="text-sm text-gray-600 dark:text-flour">Rendement</p>
                        <p class="text-xl font-bold text-coffee dark:text-flour">{{ recipe.yield|default('N/A') }} {{ recipe.yieldUnit.name ?? '' }}</p>
                    </div>
                </div>
                <div class="flex items-center space-x-3">
                    <i class="bi bi-currency-euro text-2xl text-golden"></i>
                    <div>
                        <p class="text-sm text-gray-600 dark:text-flour">Coût total</p>
                        <p class="text-xl font-bold text-salmon dark:text-golden">{{ totalCost|format_currency('EUR', locale='fr') }}</p>
                    </div>
                </div>
            </div>

            {# Preparation Steps Section #}
            <div class="mb-8">
                <h2 class="subtitle">Étapes de préparation</h2>
                {% if recipe.steps is not empty %}
                    <ul class="list-none p-6 sm:p-8 space-y-6">
                        {% for step in recipe.steps|sort((a, b) => a.number <=> b.number) %}
                            <li class="p-4 bg-cream dark:bg-coffee rounded-lg shadow-md ">
                                <div class="flex items-start mb-2">
                                    <span class="text-2xl font-bold text-golden mr-3">{{ step.number }}.</span>
                                    <p class="text-lg font-semibold text-coffee dark:text-flour flex-1">{{ step.description }}</p>
                                </div>
                                {% if step.durationMinutes is not null and step.durationMinutes > 0 %}
                                    <p class="text-sm text-gray-600 dark:text-flour ml-8 mb-2">
                                        <i class="bi bi-clock mr-1"></i> Durée estimée : {{ step.durationMinutes }} minutes
                                    </p>
                                {% endif %}

                                {% if step.stepProducts is not empty %}
                                    <h4 class="text-md font-semibold text-coffee dark:text-flour ml-8 mt-4 mb-2">Ingrédients nécessaires :</h4>
                                    <ul class="list-none ml-8 text-coffee dark:text-flour text-sm space-y-1">
                                        {% for stepProduct in step.stepProducts %}
                                            {% set product = stepProduct.product %}
                                            {% set quantity = stepProduct.quantity %}
                                            {% set unitObject = stepProduct.unit %}
                                            {% set ingredientCost = 0 %}

                                            {% if product.price is not null and product.priceUnit is not null and unitObject is not null %}
                                                {% set convertedQuantity = quantity * unitObject.factorToBase / product.priceUnit.factorToBase %}
                                                {% set ingredientCost = convertedQuantity * product.price %}
                                            {% endif %}

                                            <li class="flex items-center">
                                                <i class="bi bi-dot text-2xl text-golden -ml-1 mr-1"></i>
                                                <span class="font-semibold text-coffee dark:text-flour">{{ quantity|number_format(2, ',', ' ') }}</span>
                                                <span class="text-xs text-gray-600 dark:text-flour ml-1 mr-1">{{ unitObject ? unitObject.name : '' }}</span>
                                                de
                                                <strong class="text-coffee dark:text-flour ml-1">{{ product.name }}</strong>
                                                {% if ingredientCost > 0 %}
                                                    <span class="text-sm text-gray-600 dark:text-flour ml-3">
                                                        (Coût : {{ ingredientCost|format_currency('EUR', locale='fr') }}
                                                        {% if product.price is not null and product.priceUnit is not null %}
                                                            - {{ product.price|format_currency('EUR', locale='fr') }} / {{ product.priceUnit.name }}
                                                        {% endif %}
                                                        )
                                                    </span>
                                                {% endif %}
                                            </li>
                                        {% endfor %}
                                    </ul>
                                {% endif %}
                            </li>
                        {% endfor %}
                    </ul>
                {% else %}
                    {% include 'partials/_empty_state.html.twig' with {'message': 'Aucune étape de préparation n\'a été définie pour cette recette.'} %}
                {% endif %}
            </div>

            {# Back to list button #}
            <div class="mt-8 pt-6">
                <a href="{{ path('product_index') }}" class="btn-return">
                    <i class="bi bi-arrow-left-circle mr-2"></i> Retour
                </a>
            </div>
        
    </div>
{% endblock %}