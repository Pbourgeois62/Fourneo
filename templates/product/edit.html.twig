{% extends 'base.html.twig' %}

{% block title %}Nouveau produit - Fourneo{% endblock %}

{% block body %}
    <h1 class="text-2xl font-bold mb-6 text-gray-800">Créer un nouveau produit</h1>

    {{ form_start(form, {
        attr: {
            class: 'space-y-6 bg-white p-6 rounded-xl shadow-md'
        }
    }) }}
        {{ form_row(form.name) }}
        {{ form_row(form.size) }}
        {{ form_row(form.price) }}
        {{ form_row(form.categories) }}

        <div>
            <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg">
    {{ product is defined and product ? 'Modifier' : 'Créer' }}
</button>
            <a href="{{ path('product_index') }}" class="ml-4 text-gray-600 hover:text-gray-900">
                Retour à la liste
            </a>
        </div>
    {{ form_end(form) }}
{% endblock %}
