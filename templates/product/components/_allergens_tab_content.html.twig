<div class="mt-6 w-full"> 
    <!-- Boutons d’action -->
    <div class="flex flex-wrap justify-start gap-3 mb-4">
        <a href="{{ path('add_allergen_to_product', {id: product.id}) }}" class="btn-action">
            <i class="bi bi-link-45deg mr-2"></i>Lier
        </a>
        <a href="{{ path('allergen_new_for_product', {product: product.id}) }}" class="btn-validation">
            <i class="bi bi-plus-circle mr-2"></i>Nouveau
        </a>
    </div>

    <!-- Liste des allergènes -->
    {% if product.allergens is not empty %}
        <ul class="flex flex-wrap gap-2">
            {% for allergen in product.allergens %}
                <li>
                    <span class="bg-red-100 text-red-800 text-xs font-medium px-2.5 py-0.5 rounded-full border border-red-200 cursor-help dark:bg-red-900 dark:text-red-200 dark:border-red-700" title="{{ allergen.description }}">
                        {{ allergen.name }}
                    </span>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        {% include 'partials/_empty_state.html.twig' with {'message': 'Aucun allergène disponible'} %}
    {% endif %}
</div>
